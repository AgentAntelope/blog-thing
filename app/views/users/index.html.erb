<h1>Listing users</h1>
<table>
  <tr>
    <th>Login</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to "#{user.login}", user %></td>
    <% if user == current_user %>
      <td><%= link_to 'Edit password', edit_user_path(user) %> |</td>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>
<br />

